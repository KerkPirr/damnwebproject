<!DOCTYPE html>
<head xmlns="http://www.w3.org/1999/html">
    <%- include('head'); %>
</head>
<body>
<div class = "wrapper">
<header>
    <%- include('header'); %>
</header>

    <% for (var i = 0; i < posts.length; i += 1) { %>
        <div class="container">
            <div class="article">
                <h2 class="article-header"><%= posts[i].post_name %></h2>
                <div class="article-autor"><%= posts[i].post_author %></div>
                <li class="article-post-time"><%= posts[i].publication_date %></li>
                <p class="article-text"><%= posts[i].post_content %></p>
            </div>
        </div>
    <% } %>

<footer>
    <%-  include('footer'); %>
</footer>
</div>
</body>