<!DOCTYPE html>
<head>
    <%- include('head'); %>
</head>
<body>
<div class="wrapper">
<header>
    <%- include('header'); %>
</header>

    <% for (let i = 0; i < posts.length; i += 1) { %>
    <div class="container">
        <div class="article">
            <h2 class="article-header"><%= posts[i].post_name %></h2>
            <div class="article-autor"><%= posts[i].post_author %></div>
            <li class="article-post-time"><%= posts[i].publication_date %></li>
            <p class="article-text"><%= posts[i].post_content %></p>
            <div class="tags">
                <% for (var j = 0; j < post[i].post_tags.length;j += 1) { %>
                <p class="article-tag"><%= posts[i].post_tags[j] %></p>
                    <% } %>
            </div>
        </div>
    </div>
    <% } %>

<footer>
    <%- include('footer'); %>
</footer>
</div>
</body>
