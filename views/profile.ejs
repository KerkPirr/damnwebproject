<!doctype html>
<html lang="en">
<head>
    <%- include('head'); %>
    <link rel="stylesheet" type="text/css" href="stylesheets/profile.css">
</head>
<body>

    <div class = "wrapper">
        <header>
            <%- include('header'); %>
        </header>
    <main>
        <h3>Profile</h3>
        <div class = "all_content">
            <div id = "avatars_nickname" class="wrapper_main1">
                <div class="user_avatar">
                    <%if(user.user_picture !== null){%>
                    <img src="<%= user.user_picture %>">
                    <%}else{%>
                    <img src="https://www.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png">
                    <%}%>
                </div>
                <div class = "nickname">
                    <p><%= user.login %></p>
                </div>
                <form class = "container_button_search">
                    <input class="buttonSearch_profile" type="submit" name="submit" value="Change Nickname">
                    <input class="buttonSearch_profile" type="submit" name="submit" value="Change Avatar">
                </form>
            </div>
            <div id = "posts_and_comments" class="wrapper_main2">
                <div class = "content" id = "content1"><h4>My posts</h4>
                    <%=user.user_posts%>
                </div>
                <div class = "content"> <h4>My comments</h4>
                    <%= user.user_comments%>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <%- include('footer'); %>
    </footer>
    </div>
</body>
</html>