<head>
    <%- include('head'); %>
</head>
<body>
<header>
    <%- include('header'); %>
</header>
<div id="wrapper">
    <div class="article">
        <h3 class="article-header"><%= posts.post_name %></h3>
        <div class="article-autor"><%= posts.post_author %></div>
        <li class="article-post-time"><%= posts.pub_date.toLocaleDateString('en-GB').replaceAll('/','.') %></li>
        <div class = "img_comment">
            <img src="<%= posts.post_pict%>" alt="Здесь должна была быть картинка">
        </div>
        <p class="article-text"><%= posts.post_content %></p>
    </div>
    <div class="comments">
        <% for(var i = 0; i < comments.length; i += 1){ %>
            <div class="comment">
                <div class="data">
                    <img class="ava" src="" alt="">
                    <span class="username"><%= comments[i].author %></span>
                    <span class="post-time"><%= comments[i].cmnt_date.toLocaleDateString('en-GB').replaceAll('/','.') %></span>
                </div>
                <div class="text">
                    <%= comments[i].cmnt_txt %>
                </div>
            </div>
        <% } %>
    </div>
</div>
<footer>
    <%- include('footer'); %>
</footer>
</body>