<head>
    <%- include('head'); %>
</head>
<body>
<header>
    <%- include('header'); %>
</header>
<div id="wrapper">
    <div class="article">
        <h2 class="article-header"><%= post.article_header %></h2>
        <div class="article-autor"><%= post.autor %></div>
        <li class="article-post-time"><%= post.date %></li>
        <p class="article-text"><%= post.disc %></p>
    </div>
    <div class="comments">
        <% for(var i = 0; i < comments.length; i += 1){ %>
            <div class="comment">
                <div class="data">
                    <img class="ava" src="/public/images/аватарки/ava1.jfif" alt="">
                    <span class="username"><%= autor %></span>
                    <span class="post-time"><%= date %></span>
                </div>
                <div class="text">
                    <%= comments[i].text %>
                </div>
            </div>
        <% } %>
    </div>
</div>
<footer>
    <% -include('footer'); %>
</footer>
</body>